<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint=""
        android:layout_marginTop="12dp"
        android:layout_below="@+id/titleImageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordFirstTime"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:id="@+id/passwordSecondTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordFirstTime"
        android:layout_alignStart="@+id/passwordFirstTime"
        android:layout_below="@+id/passwordFirstTime"
        android:ems="10"
        android:hint="Repeat Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/birthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordSecondTime"
        android:layout_alignStart="@+id/passwordSecondTime"
        android:layout_below="@+id/passwordSecondTime"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Birth Date"
        android:inputType="date" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/birthDate"
        android:layout_alignLeft="@+id/birthDate"
        android:layout_alignRight="@+id/birthDate"
        android:layout_alignStart="@+id/birthDate"
        android:layout_below="@+id/birthDate"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/colorPrimary"
        android:text="Inscription"
        android:textColor="@color/White" />

</RelativeLayout>