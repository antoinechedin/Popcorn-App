<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/logoPicture"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/pop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/logoPicture"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/logoPicture"
            android:layout_marginLeft="-20dp"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="175dp"
            android:text="Inscription"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Login"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordFirstTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passwordSecondTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordFirstTime"
        android:layout_alignStart="@+id/passwordFirstTime"
        android:layout_below="@+id/passwordFirstTime"
        android:ems="10"
        android:hint="Repeat Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordSecondTime"
        android:layout_alignStart="@+id/passwordSecondTime"
        android:layout_below="@+id/passwordSecondTime"
        android:ems="10"
        android:hint="Birthday"
        android:inputType="date" />

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editBirthday"
        android:layout_alignStart="@+id/editBirthday"
        android:layout_below="@+id/editBirthday"
        android:layout_marginTop="11dp"
        android:text=" Gender"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editBirthday"
        android:layout_alignLeft="@+id/textViewGender"
        android:layout_alignRight="@+id/editBirthday"
        android:layout_alignStart="@+id/textViewGender"
        android:layout_below="@+id/textViewGender" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="@dimen/activity_button_margin"
        android:layout_marginLeft="@dimen/activity_button_margin"
        android:layout_marginRight="@dimen/activity_button_margin"
        android:layout_marginStart="@dimen/activity_button_margin"
        android:background="@color/colorPrimary"
        android:text="Inscription"
        android:textColor="@android:color/white" />


</RelativeLayout>