<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/colorPrimary" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Login"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordFirstTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passwordSecondTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordFirstTime"
        android:layout_alignStart="@+id/passwordFirstTime"
        android:layout_below="@+id/passwordFirstTime"
        android:ems="10"
        android:hint="Repeat Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordSecondTime"
        android:layout_alignStart="@+id/passwordSecondTime"
        android:layout_below="@+id/passwordSecondTime"
        android:ems="10"
        android:hint="Birthday"
        android:inputType="date" />

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editBirthday"
        android:layout_alignStart="@+id/editBirthday"
        android:layout_below="@+id/editBirthday"
        android:layout_marginLeft="4dp"
        android:text="Gender"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editBirthday"
        android:layout_alignLeft="@+id/textViewGender"
        android:layout_alignRight="@+id/editBirthday"
        android:layout_alignStart="@+id/textViewGender"
        android:layout_below="@+id/textViewGender" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"
        android:text="Inscription"
        android:textColor="@android:color/white" />


</RelativeLayout>