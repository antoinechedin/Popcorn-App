<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieDetailWhiteText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MovieDetailYellowText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MovieDetailSeeMoreButtonText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/seeMore</item>
    </style>

    <style name="movieRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>
    
</resources>